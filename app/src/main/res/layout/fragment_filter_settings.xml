<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_dark_background"
    android:clickable="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="40dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Begin Date"
            android:id="@+id/begin_date_heading"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/14/2018"
            android:id="@+id/begin_date"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/begin_date_heading"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sort Order"
            android:id="@+id/sort_header"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_below="@id/begin_date"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/sort"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sort_header"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@id/sort"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News Desk Values"
                android:id="@+id/news_desk_header"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"/>
            <CheckBox android:id="@+id/checkbox_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Sports" />
            <CheckBox android:id="@+id/checkbox_arts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Arts" />
            <CheckBox android:id="@+id/checkbox_fashion_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Fashion &amp; Style" />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Task"
            android:background="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:id="@+id/save_task"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>


